<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/palletteback"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/wave"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="150dp"
            android:columnCount="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/applogoo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="The Best Place To Find Your Dream Job"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@color/buttonBack"
                android:text="Sign In"

                android:textSize="30dp"
                android:textColor="@color/bluesky"
                android:id="@+id/signin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:text="Add Account"
                android:textSize="30dp"
                android:textColor="@color/buttonBack"
                android:id="@+id/registertoapp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/admin"
                    android:id="@+id/adminDash"/>
            </LinearLayout>



        </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>