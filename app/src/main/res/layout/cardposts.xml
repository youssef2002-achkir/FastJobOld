<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:columnCount="1"
        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/JournalistCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            card_view:cardBackgroundColor="@color/cardback"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/jobtilePost"
                android:hint="Job Title"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="More"
                android:background="@color/buttonBack"
                android:layout_marginTop="59dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:id="@+id/morePost"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/NamePost"
                android:hint="Name"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/EmailPost"
                android:hint="EmailPost"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="130dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/AboutPost"
                android:hint="About"
                android:textColor="@color/black"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="130dp"
                android:gravity="center"
                />






        </androidx.cardview.widget.CardView>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>