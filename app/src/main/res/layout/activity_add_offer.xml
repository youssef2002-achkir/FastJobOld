<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOfferActivity"
    android:background="@color/palletteback">

    <LinearLayout
        android:background="@drawable/wave"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Offer"
            android:gravity="center"
            android:textColor="@color/textcolor"
            android:textStyle="bold"
            android:textSize="26dp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:columnCount="1">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="POSITION:"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/position"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="COMPANY:"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/company"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="SALARY:"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/salary"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="Speciality:"
                android:textColor="@color/black"/>
            <Spinner
                android:background="@color/white"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:id="@+id/speciality"
                android:layout_below="@+id/ch"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="DATE:"
                android:textColor="@color/black"/>
            <EditText
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:id="@+id/date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:inputType="date|datetime"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="Employer:"
                android:textColor="@color/black"/>
            <EditText
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                android:id="@+id/employerName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxLength="35"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/backOfferBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/back"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/resetBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/reset"/>



            <Button
                android:id="@+id/submitOfferBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/homeOfferBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/home"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>